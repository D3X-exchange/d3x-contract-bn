        if (block.timestamp > deadline) {
            revert ERC2612ExpiredSignature(deadline);
        }

        bytes32 structHash = keccak256(abi.encode(HERC20Type.PERMIT_TYPEHASH, owner, spender, value, _useNonce(owner), deadline));

